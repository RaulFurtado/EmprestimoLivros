@model EmprestimosModel

@{
    ViewData["title"] = "Excluir Emprestimo";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Empréstimo</h1>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Excluir">

        <input type="hidden" asp-for="Id" />

        <h2 class="text-light">TEM CERTEZA QUE DESEJA EXCLUIR?</h2>

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="hidden" class="form-control" asp-for="Recebedor" id="Recebedor">
            <h3 class="text-light">@Model.Recebedor</h3>
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="hidden" class="form-control" asp-for="Fornecedor" id="Fornecedor">
            <h3 class="text-light">@Model.Fornecedor</h3>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro:</label>
            <input type="hidden" class="form-control" id="Livro" asp-for="LivroEmprestado">
            <h3 class="text-light">@Model.LivroEmprestado</h3>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50" asp-controller="Emprestimo" asp-action="Excluir">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>

